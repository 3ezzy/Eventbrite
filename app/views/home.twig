{# views/home/index.html.twig #}
{% extends 'layouts/base.html.twig' %}

{% block title %}YouEvent - La plateforme des passionnés d'événements{% endblock %}

{% block content %}
    <div class="min-h-screen">
        <nav class="py-4 px-6 bg-white border-b">
            <div class="max-w-screen-xl mx-auto flex justify-between items-center">
                <div class="flex items-center gap-12">
                    <a href="{{ path('home') }}" class="text-2xl font-black tracking-tight">
                        You<span class="text-orange-500">Event</span>
                    </a>
                    <div class="hidden md:flex gap-8">
                        <a href="{{ path('discover') }}" class="hover:text-orange-500">Découvrir</a>
                        <a href="{{ path('event_create') }}" class="hover:text-orange-500">Créer un événement</a>
                    </div>
                </div>

                {% if not app.user %}
                    <div class="flex gap-4 items-center">
                        <a href="{{ path('login') }}" class="hover:text-orange-500">Se connecter</a>
                        <a href="{{ path('register') }}" class="px-4 py-2 bg-orange-500 text-white rounded-full hover:bg-orange-600 transition">
                            Rejoindre
                        </a>
                    </div>
                {% else %}
                    <div class="flex items-center gap-6">
                        <a href="{{ path('profile_tickets') }}" class="hover:text-orange-500">Mes billets</a>
                        <a href="{{ path('profile_settings') }}" class="hover:text-orange-500">Paramètres</a>
                        <a href="{{ path('logout') }}" class="hover:text-orange-500">Déconnexion</a>
                    </div>
                {% endif %}
            </div>
        </nav>

        <main>
            <section class="relative h-[80vh] flex items-center">
                <div class="absolute inset-0 overflow-hidden">
                    <video autoplay muted loop class="w-full h-full object-cover">
                        <source src="/public/videos/festival-bg.mp4" type="video/mp4">
                    </video>
                    <div class="absolute inset-0 bg-black/40"></div>
                </div>

                <div class="relative max-w-screen-xl mx-auto px-6">
                    <div class="max-w-2xl">
                        <h1 class="text-5xl font-bold text-white mb-6 leading-tight">
                            Vivez des moments uniques partout en France
                        </h1>
                        <p class="text-lg text-white/90 mb-8">
                            Festivals, concerts, expos, sport... Trouvez les meilleurs événements près de chez vous
                        </p>

                        <div class="bg-white p-4 rounded-xl shadow-xl flex gap-4">
                            <div class="flex-1">
                                <label for="search" class="block text-sm font-medium text-gray-700 mb-1">
                                    Rechercher un événement
                                </label>
                                <input type="text"
                                       id="search"
                                       class="w-full focus:ring-2 focus:ring-orange-500 focus:outline-none rounded-lg border-gray-200"
                                       placeholder="Festival, concert, exposition...">
                            </div>
                            <div>
                                <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Où ?</label>
                                <input type="text"
                                       id="location"
                                       class="w-full focus:ring-2 focus:ring-orange-500 focus:outline-none rounded-lg border-gray-200"
                                       placeholder="Ville ou code postal">
                            </div>
                            <button class="px-8 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition">
                                Rechercher
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
{% endblock %}