{# views/profile/tickets.html.twig #}
{% extends "layouts/header.twig" %}

{% block title %}Events - YouEvent{% endblock %}

{% block content %}

<div class="w-5/6 mx-auto py-12 px-4">
    <h1 class="text-2xl font-bold mb-8">All Events</h1>

    <div class="space-y-6">
        <div class="mb-10">
            <div class="grid grid-cols-1 sm:grid-cols-4 lg:grid-cols-3 gap-8">
                {% for event in events %}
                    <div class="bg-white rounded-2xl overflow-hidden shadow-lg transform transition hover:scale-105 hover:shadow-2xl">
                        <!-- Event Image -->
                        <div class="relative h-48 overflow-hidden">
                            <img 
                                src="{{ event.event_image }}" 
                                alt="Event" 
                                class="w-full h-full object-cover"
                            >
                            <div class="absolute top-4 right-4 bg-orange-500 text-white px-3 py-1 rounded-full text-sm">
                                {{ event.namecategory }}
                            </div>
                        </div>

                        <!-- Event Details -->
                        <div class="p-6">
                            <h2 class="text-2xl font-bold text-orange-600 mb-2">{{ event.title }}</h2>
                            
                            <div class="flex justify-between items-center mb-4">
                                <div class="flex items-center text-gray-600">
                                    <i class="ri-map-pin-line mr-2 text-orange-500"></i>
                                    {{ event.location }}
                                </div>
                                <div class="text-orange-600 font-bold">
                                    {{ event.date }}
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex space-x-4">
                                <a href="{{ path('event/details/') }}{{ event.event_id }}" class="w-full mt-7 text-center border-2 border-orange-500 text-orange-500 py-2 rounded-full hover:bg-orange-500 hover:text-white transition">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}